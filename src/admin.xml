<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
    <package name="user" extends="struts-default" namespace="/admin">
        <global-results>
            <result name="login" type="redirectAction">
                <param name="namespace">/admin</param>
                <param name="actionName">user_login</param>
            </result>
        </global-results>

        <action name="user_login" class="adminUserAction" method="login">
            <result name="login">/WEB-INF/admin/login.jsp</result>
        </action>

        <action name="user_*" class="adminUserAction" method="{1}">
            <result name="success">/WEB-INF/admin/success.jsp</result>
        </action>

    </package>
</struts>