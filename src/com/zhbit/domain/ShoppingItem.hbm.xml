<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.zhbit.domain.ShoppingItem" table="bit_shoppingcart">
        <composite-id>
            <key-property name="productId" column="product_id" />
            <key-property name="customer" />
        </composite-id>

        <property name="num" />

        <property name="createTime" column="create_time" type="date" />
    </class>
</hibernate-mapping>