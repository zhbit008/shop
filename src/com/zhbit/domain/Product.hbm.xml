<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.zhbit.domain.Product" table="bit_product">
        <id name="id">
            <generator class="native" />
        </id>
        <property name="name" type ="string" length="255"/>
        <property name="saleNum" column="sale_num"/>
        <property name="image" type ="string" length="255"/>
        <property name="originPrice" column="origin_price"/>
        <property name="salePrice" column="sale_price"/>
        <property name="describe" type ="string" length="255"/>
        <property name="dateline" type="date"/>
        <property name="cateId"  column="cate_id"/>
        <property name="storeId"  column="store_id"/>
        <property name="title" type ="string" length="255"/>
        <property name="love" type ="string" length="255"/>
    </class>
</hibernate-mapping>