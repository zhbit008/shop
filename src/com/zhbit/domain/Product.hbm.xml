<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.zhbit.domain.Product" table="bit_product">
        <id name="id">
            <generator class="native" />
        </id>
        <property name="proname" type ="string" length="255"/>
        <property name="salecount" />
        <property name="image" type ="string" length="255"/>
        <property name="originprice" />
        <property name="saleprice" />
        <property name="decript" type ="string" length="255"/>
        <property name="saledate" type="java.util.Date"/>
        <property name="cate_id" />

    </class>
</hibernate-mapping>